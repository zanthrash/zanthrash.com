---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "blog/tag/{{ tag | slug}}/"
layout: blog
---

<section>

  <h2 class="my-10 text-4xl text-yellow-500"> TAG: {{ tag }} </h2>

  <div class="flex flex-col space-y-3">
    {% for post in collections[tag] %}
          {% postListItem  
            url=post.url | url, 
            date=post.date | readableDate,
            year=post.date | year,
            month=post.date | monthShort,
            day=post.date | day,
            title=post.data.title,
            description=post.data.description
            %}
    {% endfor %}
  </div>


</section>